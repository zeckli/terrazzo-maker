{
  "name": "terrazzo-maker",
  "version": "0.1.0",
  "description": "A dummy tool for generating terrazzo pattern.",
  "homepage": "https://github.com/zeckli/terrazzo-maker",
  "author": {
    "name": "Wei Li",
    "url": "https://github.com/zeckli"
  },
  "engines": {
    "node": ">=12.13.0",
    "npm": ">=6.12.0"
  },
  "license": "MIT",
  "main": "build/index.js",
  "module": "build/index.es.js",
  "types": "build/index.d.ts",
  "repository": "zeckli/terrazzo-maker",
  "keywords": [
    "terrazzo"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run tslint && npm run prettify && npm run jest && npm run build"
    }
  },
  "dependencies": {
    "d3": "^5.14.2",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@types/d3": "^5.7.2",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/react": "^16.9.13",
    "@types/react-dom": "^16.9.4",
    "codecov": "^3.6.5",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.5",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.25.2",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
  },
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "build": "rimraf build/**/* && rollup -c rollup.config.js",
    "example": "parcel -p 9000 example/index.html --open",
    "jest": "jest && codecov",
    "prettify": "prettier --write \"{src,example}/**/*.{ts,tsx,json}\"",
    "tslint": "tslint -p ."
  }
}
